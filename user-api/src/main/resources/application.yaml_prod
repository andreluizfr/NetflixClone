server:
    port: 5151
    servlet:
        encoding:
            charset: UTF-8
            enabled: true
            force: true

management:
    endpoint:
        health:
            enabled: true 
            show-details: always

spring:
    application:
        name: user-api
    profiles:
        active: prod
    datasource:
        url: jdbc:postgresql://postgres:5432/netflixClone
        username: postgres
        password: admin
        initialization-mode: always
    sql:
        init:
            mode: always
            encoding: UTF-8
    jpa:
        properties:
            hibernate:
                dialect: org.hibernate.dialect.PostgreSQLDialect
                envers:
                    audit_table_suffix: _aud
                    audit_strategy: org.hibernate.envers.strategy.ValidityAuditStrategy
                    audit_strategy_validity_end_rev_field_name: end_revision
                    audit_strategy_validity_store_revend_timestamp: true
        hibernate:
            ddl-auto: validate
        show-sql: false
        open-in-view: true
        #defer-datasource-initialization: true #se quiser que a criação da tabela seja feita antes de data.sql for rodado
    cache:
        type: redis
    redis:
        host: redis
        port: 6379
        password: netflixredis6379
    kafka:
        bootstrap-servers: ${KAFKA_URL}
    flyway:
        locations: classpath:db/migration
        baselineOnMigrate: true
        table: flyway_history_user_api

eureka:
    client:
        serviceUrl:
            defaultZone: ${EUREKA_URL}
        register-with-eureka: true
    instance:
        hostname: localhost
        preferIpAddress: true
        lease-renewal-interval-in-seconds: 15

logging:
    level:
        .: ERROR
    
api:
    security:
        token:
            jwtSecret: ${JWT_SECRET_KEY}